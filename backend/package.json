{
	"private": true,
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.ts",
	"scripts": {
		"format": "prettier -w \"**/*.ts\" --ignore-path \".gitignore\"",
		"lint": "eslint --fix \"**/*.ts\" --color",
		"tsc": "rimraf build & tsc -p \"tsconfig.json\"",
		"start": "node \"./build/index.js\"",
		"serve": "tsnd --respawn --cls --quiet --rs \"./src/index.ts\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Jau2002/.git"
	},
	"engines": {
		"node": "16.13.0"
	},
	"author": "Jau2002 <idamendjaume@gmail.com> (https://www.linkedin.com/in/jaumesuarez)",
	"keywords": [],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Jau2002//issues"
	},
	"prisma": {
		"schema": "prisma/schema.prisma"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"quoteProps": "preserve"
	},
	"eslintConfig": {
		"env": {
			"es2021": true,
			"node": true
		},
		"extends": "standard-with-typescript",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"rules": {
			"no-tabs": 0,
			"@typescript-eslint/indent": 0,
			"@typescript-eslint/comma-dangle": 0,
			"@typescript-eslint/no-misused-promises": 0,
			"@typescript-eslint/no-unused-vars": 0,
			"@typescript-eslint/strict-boolean-expressions": 0,
			"@typescript-eslint/space-before-function-paren": 0
		}
	},
	"homepage": "https://github.com/Jau2002/#readme",
	"devDependencies": {
		"@types/cors": "2.8.17",
		"@types/dotenv": "8.2.0",
		"@types/express": "4.17.21",
		"@types/node": "20.10.0",
		"@typescript-eslint/eslint-plugin": "6.12.0",
		"eslint": "8.54.0",
		"eslint-config-standard-with-typescript": "40.0.0",
		"eslint-plugin-import": "2.29.0",
		"eslint-plugin-n": "16.3.1",
		"eslint-plugin-promise": "6.1.1",
		"prettier": "3.1.0",
		"prisma": "5.6.0",
		"ts-node-dev": "2.0.0",
		"typescript": "5.3.2"
	},
	"dependencies": {
		"@prisma/client": "5.6.0",
		"dotenv": "16.3.1",
		"express": "4.18.2",
		"morgan-body": "2.6.9",
		"rimraf": "5.0.5",
		"valibot": "0.21.0"
	}
}
